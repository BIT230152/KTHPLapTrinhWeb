@model WAREHOUSE_MANAGEMENT_SYSTEM.Data.Models.StockMovement

@{
    ViewData["Title"] = "Tạo giao dịch kho";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h3 class="card-title mb-0">Tạo giao dịch kho</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductId" class="form-label">Sản phẩm</label>
                                <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MovementType" class="form-label">Loại giao dịch</label>
                                <select asp-for="MovementType" class="form-select">
                                    <option value="0">Nhập kho</option>
                                    <option value="1">Xuất kho</option>
                                </select>
                                <span asp-validation-for="MovementType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Quantity" class="form-label">Số lượng</label>
                                <input asp-for="Quantity" class="form-control" type="number" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MovementDate" class="form-label">Ngày giao dịch</label>
                                <input asp-for="MovementDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="MovementDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Country" class="form-label">Quốc gia</label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}