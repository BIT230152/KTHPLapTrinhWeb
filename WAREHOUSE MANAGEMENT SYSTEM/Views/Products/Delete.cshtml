@model WAREHOUSE_MANAGEMENT_SYSTEM.Data.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h3 class="card-title mb-0 text-danger">
                        <i class="fas fa-exclamation-triangle"></i> Xác nhận xóa sản phẩm
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5>Bạn có chắc chắn muốn xóa sản phẩm này?</h5>
                        <p class="mb-0">Hành động này không thể hoàn tác.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="img-fluid rounded shadow-sm mb-4" style="max-height: 200px; width: 100%; object-fit: cover;" />
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.Name</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Danh mục</dt>
                                <dd class="col-sm-8">@Model.Category.Name</dd>

                                <dt class="col-sm-4">Số lượng</dt>
                                <dd class="col-sm-8">@Model.Count</dd>

                                <dt class="col-sm-4">Giá nhập</dt>
                                <dd class="col-sm-8">@Model.Cost.ToString("N0") đ</dd>

                                <dt class="col-sm-4">Giá bán</dt>
                                <dd class="col-sm-8">@Model.Price.ToString("N0") đ</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
