@model WAREHOUSE_MANAGEMENT_SYSTEM.Data.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Chi tiết sản phẩm</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="img-fluid rounded shadow-sm mb-4" style="max-height: 300px; width: 100%; object-fit: cover;" />
                        </div>
                        <div class="col-md-6">
                            <h4 class="mb-4">@Model.Name</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Danh mục</dt>
                                <dd class="col-sm-8">@Model.Category.Name</dd>

                                <dt class="col-sm-4">Số lượng</dt>
                                <dd class="col-sm-8">@Model.Count</dd>

                                <dt class="col-sm-4">Giá nhập</dt>
                                <dd class="col-sm-8">@Model.Cost.ToString("N0") đ</dd>

                                <dt class="col-sm-4">Giá bán</dt>
                                <dd class="col-sm-8">@Model.Price.ToString("N0") đ</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5>Mô tả</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
