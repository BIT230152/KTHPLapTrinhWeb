@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    .btn-google {
        background-color: #dd4b39;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 10px;
        width: 100%;
        text-align: center;
    }

        .btn-google:hover {
            background-color: #c23321;
        }
    .fa-google {
        margin-right: 10px;
    }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <div class="text-center mb-4">
                <i class="fas fa-warehouse"></i>
                <h2 class="text-primary">Welcome Back!</h2>
                <p class="text-muted">Please sign in to your account</p>
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Địa chỉ email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Nhập email của bạn" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                </div>
                <div class="text-center mt-3">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-muted">Quên mật khẩu ?</a>
                </div>
                <div class="text-center mt-2">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-muted">Đăng ký tài khoản mới</a>
                </div>
                <div class="text-center mt-2">
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none text-muted">Gửi xác nhận email</a>
                </div>
            </form>

            <!-- Phần đăng nhập bằng Google -->
            <hr class="my-4">
            <div class="text-center">
                <p class="text-muted">Hoặc đăng nhập bằng</p>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-google" name="provider" value="Google" title="Log in using your Google account">
                            <i class="fab fa-google"></i> Đăng nhập bằng Google
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}